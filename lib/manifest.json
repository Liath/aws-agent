{
  "background": {
    "scripts": [
      "request-handler.js"
    ]
  },
  "browser_action": {
    "default_popup": "dialog.html"
  },
  "description": "Access AWS sigv4 resources with Chrome",
  "manifest_version": 2,
  "name": "AWS Agent",
  "short_name": "AWS Agent",
  "options_ui": {
    "page": "dialog.html",
    "chrome_style": true
  },
  "icons": {
    "16": "ico-16.png",
    "48": "ico-48.png",
    "128": "ico-128.png"
  },
  "permissions": [
    "*://*.amazonaws.com/*",
    "http://169.254.169.254/*",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "version": "0.0.4"
}
